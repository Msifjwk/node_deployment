<table id="mitabla" class="table table-striped table-responsive-md btn-table">

    <thead>
        <tr>
            <th class="th-sm">
                Id
            </th>
            <th class="th-sm">
                Nombre
            </th>
            <th class="th-sm">
                Precio
            </th>
            <th class="th-sm">
                IMG
            </th>
            <th class="th-sm">
                Categoria
            </th>
            <th class="th-sm">
                Descripcion
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        {{#products}}
        <tr>
            <br>
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{picture}}</td>
            <td>{{category}}</td>
            <td>{{description}}</td>
            <td>

              <form action="/api/product/{{_id}}" method="GET">
                <button class="btn btn-primary" type="submit">Editar</button>
              </form>
            </td>
            <td>
              <form action="/api/product/{{_id}}" method="GET">
                <button class="btn btn-primary" type="submit">Eliminar</button>
              </form>
            </td>
        </tr>
        {{/products}}
    </tbody>
</table>